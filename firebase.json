{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": { // <-- 이 functions 섹션이 있어야 합니다.
    "source": "functions", // <-- 당신의 functions/index.js가 있는 폴더
    "runtime": "nodejs18" // 또는 다른 Node.js 런타임 버전
  }
}